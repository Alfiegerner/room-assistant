{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@abandonware/noble": ["node_modules/@types/noble"],
      "democracy": ["typings/democracy"],
      "i2c-bus": ["node_modules/@types/i2c-bus", "typings/i2c-bus"]
    },
    "incremental": true
  },
  "exclude": ["node_modules", "dist"]
}
